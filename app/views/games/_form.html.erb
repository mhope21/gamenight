  <%= form_with(model: @game, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", id: "name" %>
  </div>

  <div class="mb-3">
    <%= form.label :max_players, class: "form-label" %>
    <%= form.number_field :max_players, class: "form-control", id: "max_players" %>
  </div>

  <div class="mb-3">
    <%= form.label :playing_time, class: "form-label" %>
    <%= form.number_field :playing_time, class: "form-control", id: "playing_time" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", id: "description" %>
  </div>

  <div class="mb-3">
    <%= form.label :image, class: "form-label" %>
    <%= form.file_field :image, class: "form-control", id: "image" %>
  </div>

  <div class="mb-3">
  <%= form.label :video_url, class: "form-label" %>
  <%= form.text_field :video_url, class: "form-control", id: "video_url" %>
  </div>

  <div class="form-check">
    <%= form.check_box :already_played, class: "form-check-input", id: "already_played" %>
    <%= form.label :already_played, class: "form-check-label" %>
  </div>
  <div class="d-flex justify-content-center">
  <div class="actions">
